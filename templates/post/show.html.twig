{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="container">
		<div class="my-4">
			<h1 class="fs-1 text-bold text-uppercase">
				{{post.title}}
			</h1>
		</div>

		<div class="card shadow-sm row">
			<img src="{{ post.image }}" alt="{{ post.title }}" class="card-img-top img-fluid" height="225" width="100%">
			<p> {{post.content}} </p>
		</div>

	</div>
{% endblock %}
