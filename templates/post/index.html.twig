{% extends 'base.html.twig' %}

{% block title %}Post !
{% endblock %}

{% block body %}
	<div class="container">
		<div class="my-4">
			<h1 class="fs-1 text-bold text-uppercase">Tous nos posts</h1>
		</div>
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
			{% for item in posts %}
				<div class="col">
					<div class="card shadow-sm">
						<img src="{{ item.image }}" alt="{{ item.title }}" class="card-img-to img-fluid" height="225" width="100%">
						<div class="card-body">
							<p class="card-text">
								{{ item.content ?  item.content|slice(0, 30) : ''}}...</p>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group bg-black">
									<a href={{ path('app_post', {'ref':item.ref} )}} class="btn btn-sm btn-outline-secondary">Lire</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="navigation mt-4 mb-3 my-6 w-100">
			{{ knp_pagination_render(posts) }}
		</div>
	</div>
{% endblock %}
